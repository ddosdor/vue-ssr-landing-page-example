{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "serverFiles": [
          "server/**",
          "client/**"
        ],
        "internalServer": true
      }
    },
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "serverFiles": [
          "server/**",
          "client/**"
        ],
        "internalServer": true
      } 
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "server.js" }
  ]
}